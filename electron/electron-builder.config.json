{
  "appId": "com.pastoraldomenor.vitoriadaconquista",
  "directories": {
    "buildResources": "resources"
  },
  "files": ["assets/**/*", "build/**/*", "capacitor.config.*", "app/**/*"],
  "publish": {
    "provider": "generic"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "assets/pastoral-menor.ico",
    "installerSidebar": "assets/pastoral-menor.ico",
    "uninstallerSidebar": "assets/pastoral-menor.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "win": {
    "target": "nsis",
    "icon": "assets/pastoral-menor.ico"
  },
  "mac": {
    "category": "your.app.category.type",
    "target": "dmg"
  }
}
